<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>GetListStudentServlet</servlet-name>
        <servlet-class>com.example.demo_web.controller.GetListStudentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetListStudentServlet</servlet-name>
        <url-pattern>/students/list</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>StoreStudent</servlet-name>
        <servlet-class>com.example.demo_web.controller.StoreStudentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StoreStudent</servlet-name>
        <url-pattern>/students/store</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CreateProductServlet</servlet-name>
        <servlet-class>com.example.demo_web.controller.product.CreateProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateProductServlet</servlet-name>
        <url-pattern>/products/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditProductServlet</servlet-name>
        <servlet-class>com.example.demo_web.controller.product.EditProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditProductServlet</servlet-name>
        <url-pattern>/products/edit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetListProductServlet</servlet-name>
        <servlet-class>com.example.demo_web.controller.product.GetListProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetListProductServlet</servlet-name>
        <url-pattern>/products/list</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteProductServlet</servlet-name>
        <servlet-class>com.example.demo_web.controller.product.DeleteProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteProductServlet</servlet-name>
        <url-pattern>/products/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DetailProductServlet</servlet-name>
        <servlet-class>com.example.demo_web.controller.product.DetailProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DetailProductServlet</servlet-name>
        <url-pattern>/products/detail</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddProductToCartController</servlet-name>
        <servlet-class>com.example.demo_web.controller.shoppingcart.AddProductToCartController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddProductToCartController</servlet-name>
        <url-pattern>/shopping-cart/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ShowShoppingCartController</servlet-name>
        <servlet-class>com.example.demo_web.controller.shoppingcart.ShowShoppingCartController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShowShoppingCartController</servlet-name>
        <url-pattern>/shopping-cart/show</url-pattern>
    </servlet-mapping>
</web-app>